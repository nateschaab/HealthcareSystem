<Page
    x:Class="HealthcareSystem.PatientManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <TextBlock Text="Patient Management" FontSize="24" />
            <TextBox x:Name="PatientNameTextBox" PlaceholderText="Patient Name" Margin="0,10,0,0"/>
            <ComboBox x:Name="GenderComboBox" Margin="0,10,0,0">
                <ComboBoxItem Content="Male" />
                <ComboBoxItem Content="Female" />
                <ComboBoxItem Content="Other" />
            </ComboBox>
            <TextBox x:Name="ZipCodeTextBox" PlaceholderText="Zip Code" Margin="0,10,0,0" />
            <TextBox x:Name="PhoneNumberTextBox" PlaceholderText="Phone Number" Margin="0,10,0,0" />
            <Button Content="Register Patient" Click="RegisterPatient_Click" Margin="0,20,0,0"/>
            <Button Content="Edit Patient" Click="EditPatient_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
