<local:BasePage
    xmlns:local="using:HealthcareSystem.Page"
    x:Class="HealthcareSystem.QueryInterfacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="20">
        <!-- Input Section -->
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Enter SQL Query:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBox x:Name="SqlQueryTextBox" AcceptsReturn="True" Height="100" />
            <Button Content="Execute Query" Click="ExecuteQuery_Click" Margin="0,10,0,0" />
        </StackPanel>

        <!-- Results Section -->
        <ScrollViewer Margin="0,130,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="ResultsGrid" />
        </ScrollViewer>
    </Grid>
</local:BasePage>
