<page:BasePage
    x:Class="HealthcareSystem.AddNursePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:page="using:HealthcareSystem.Page">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="20">
            <TextBlock Text="Add Nurse" FontSize="24" />
            <TextBox x:Name="NurseNameTextBox" PlaceholderText="Full Name" Margin="0,10,0,0" />
            <TextBox x:Name="NurseUsernameTextBox" PlaceholderText="Username" Margin="0,10,0,0" />
            <PasswordBox x:Name="NursePasswordBox" PlaceholderText="Password" Margin="0,10,0,0" />
            <Button Content="Add Nurse" Click="AddNurse_Click" Margin="0,20,0,0" />
            <Button Content="Back" Click="BackButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</page:BasePage>